<div class="d-flex justify-content-center align-items-center vh-100">
  <div class="w-100" style="max-width: 500px;">
    <h1 class="text-center mb-4 text-primary">Stupid Coach</h1>

    <div class="card shadow p-4">
      <h2 class="mb-3">Ask your coach a question</h2>

      <form action="/answer" method="get" data-turbo="false">
        <div class="mb-3">
          <label for="question" class="form-label">Your Question</label>
          <input type="text" id="question" name="question" class="form-control" placeholder="Type your question here">
        </div>
        <button type="submit" class="btn btn-primary w-100">Ask!</button>
      </form>
    </div>
  </div>
</div>
